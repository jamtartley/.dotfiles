#!/usr/bin/env bash

sxhkd &
mopidy &
nm-applet &
$HOME/.config/polybar/launch.sh &
picom -f -I 0.1 -O 0.07 &
pidof redshift || redshift -c $HOME/.config/redshift/redshift.conf &
killall -9 dunst && dunst &
blueman-tray &
bspc monitor -d I II III IV V VI VII VIII IX X
feh --randomize --bg-fill $HOME/Pictures/Wallpapers/* &
keepassxc &

bspc config border_width 6
bspc config window_gap 20

bspc config normal_border_color "#44475a"
bspc config active_border_color "#6272a4"
bspc config focused_border_color "#8be9fd"
bspc config presel_feedback_color "#6272a4"

bspc config split_ratio 0.5
bspc config top_padding 0

bspc config focus_follows_pointer true
bspc config click_to_focus true

bspc rule -a Unity state=tiled follow=on focus=on
bspc rule -a "Riot Nightly" desktop=^9 follow=on
bspc rule -a KeePassXC desktop=^10
bspc rule -a Navigator follow=on
