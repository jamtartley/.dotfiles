alt + Return
    xterm

# make sxhkd reload its configuration files:
alt + Escape
    pkill -USR1 -x sxhkd

alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

alt + d
    rofi -show run -theme dracula -lines 5

alt + {_, shift + } g
    {google-chrome-stable --incognito, google-chrome-stable}

alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# expand a window by moving one of its side outward
alt + super + {h,j,k,l}
    bspc node -z {left -50 0,bottom 0 50,top 0 -50,right 50 0}

# contract a window by moving one of its side inward
alt + super + shift + {h,j,k,l}
    bspc node -z {right -50 0,top 0 50,bottom 0 -50,left 50 0}

alt + m
    xterm -e mutt

alt + {_,shift + } n
    xterm -e {ncmpcpp, newsboat}

alt + {_, shift + } o
    {confirm "Logout?" "bspc quit",confirm "Shutdown?" "shutdown now"}

alt + p
    rofi_projects

alt + {_, shift + } q
    bspc node -{c,k}

alt + {_, shift + } r
    redshift {-c $HOME/.config/redshift/redshift.conf, redshift -x && pkill redshift}

alt + {_, shift + } s
    {steam, spotify}

alt + {t,shift + t,f,shift + f}
    bspc node -t {tiled,pseudo_tiled,fullscreen,floating}

alt + u
    unityhub

alt + v
    VirtualBox

alt + w
    xterm -e weechat

alt + shift + x
    $HOME/.config/bspwm/scripts/lock/lock.sh

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%

alt + minus
    pactl set-sink-volume @DEFAULT_SINK@ -5%

alt + equal
    pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioPrev
    mpc previous

XF86AudioNext
    mpc next

XF86AudioPlay
    mpc toggle

XF86AudioPause
    mpc toggle

XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

