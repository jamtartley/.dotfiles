# terminal emulator
alt + Return
    xterm

# program launcher
alt + d
    rofi -show run -theme dracula -lines 5

# make sxhkd reload its configuration files:
alt + Escape
    pkill -USR1 -x sxhkd

alt + g
    qutebrowser

alt + shift + g
    firefox --private

alt + shift + x
    $HOME/.config/bspwm/scripts/lock/lock.sh

alt + p
    rofi_projects

alt + s
    redshift -c $HOME/.config/redshift/redshift.conf

alt + shift + s
    redshift -x && pkill redshift # resets screen temperature

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioPrev
    mpc previous

XF86AudioNext
    mpc next

XF86AudioPlay
    mpc toggle

XF86AudioPause
    mpc toggle

XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

#
# bspwm hotkeys
#

alt + shift + r
    bspc wm -r

alt + q
    bspc node -c

alt + shift + q
    confirm "Logout?" "bspc quit"

#
# state/flags
#

# set the window state
alt + {t,shift + t,f,shift + f}
    bspc node -t {tiled,pseudo_tiled,fullscreen,floating}

#
# focus/swap
#

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
