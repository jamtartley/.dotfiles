{
  "window.zoomLevel": 4,
  "window.titleBarStyle": "custom",
  "css.remoteStyleSheets": [
    "https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
  ],
  "emmet.includeLanguages": {
    "jsx-sublime-babel-tags": "javascriptreact"
  },
  "workbench.colorTheme": "Dracula",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.matchBrackets": false,
  "editor.detectIndentation": false,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.lineNumbers": "on",
  "editor.formatOnSave": true,
  "explorer.autoReveal": true,

  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],

  "breadcrumbs.enabled": false,
  "keyboard.dispatch": "keyCode",
  "csharp.referencesCodeLens.enabled": false,
  "vim.useCtrlKeys": false,
  "vim.leader": ",",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.splitEditorOrthogonal"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": ["workbench.action.focusPreviousGroup"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["workbench.action.focusNextGroup"]
    }
  ],
  "window.menuBarVisibility": "default",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 1,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "workbench.editor.showTabs": false,
  "[csharp]": {
    "editor.tabSize": 4
  },
  "editor.fontFamily": "'Inconsolata', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",

  "csharpfixformat.sort.usings.enabled": false,
  "csharpfixformat.sort.usings.splitGroups": true,
  "csharpfixformat.style.braces.onSameLine": false,
  "csharpfixformat.style.newline.maxAmount": 1,
  "csharpfixformat.style.operators.onSameLine": false,
  "typescriptHero.imports.organizeOnSave": true,
  "zenMode.centerLayout": false
}
